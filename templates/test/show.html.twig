{% extends 'base.html.twig' %}

{% block title %}Test{% endblock %}

{% block body %}
    <div class="container bg-light">


        <ul class="list-group">
            {% for question in test.Question %}

                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="col-sm">

                        <p class="text-secondary">Вопрос</p>
                        {{ question.name }}
                    </div>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="col-sm">
                    <p class="text-secondary">Ответы</p>
                    <br>
                </div>


                        {% for answer in question.answers %}
                                <div class="col-sm">
                                    {{ answer.name }}
                                </div>

                            {% endfor %}
                    </li>

                </li>
            {% else %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                </li>
            {% endfor %}
        </ul>
        {{ include('test/_delete_form.html.twig') }}
        <a href="{{ path('my_courses_teacher') }}">назад</a>
    </div>
{% endblock %}
