{% extends 'base.html.twig' %}

{% block title %}Hello CourseLessonsController!{% endblock %}

{% block body %}
    <div class="py-5 text-center">
        {# <img class="d-block mx-auto mb-4" src="#" alt="" width="72" height="72"> #}
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-easel"
             viewBox="0 0 16 16">
            <path d="M8 0a.5.5 0 0 1 .473.337L9.046 2H14a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1h-1.85l1.323 3.837a.5.5 0 1 1-.946.326L11.092 11H8.5v3a.5.5 0 0 1-1 0v-3H4.908l-1.435 4.163a.5.5 0 1 1-.946-.326L3.85 11H2a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1h4.954L7.527.337A.5.5 0 0 1 8 0zM2 3v7h12V3H2z"/>
        </svg>
        <h2>Добавьте уроки!</h2>
        <p class="lead">Самое время добавить в ваш курс уроки!</p>
    </div>
    <div class="container bg-light">
        <ul class="list-group">
            {% for lesson in course.lessons %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ lesson.name }}
                    <span class="badge badge-primary badge-pill">{{ include('lesson/_delete.html.twig') }}</span>
                </li>
            {% else %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                </li>
            {% endfor %}
        </ul>
        {{ include('lesson/_form.html.twig') }}
        <a href="{{ path('my_courses_teacher') }}">назад</a>
    </div>
{% endblock %}
