{% extends 'base.html.twig' %}

{% block title %}New Stage{% endblock %}

{% block body %}
    {% do form.lesson.setRendered() %}
    <div class="py-5 text-center">
        {# <img class="d-block mx-auto mb-4" src="#" alt="" width="72" height="72"> #}
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-easel"
             viewBox="0 0 16 16">
            <path d="M8 0a.5.5 0 0 1 .473.337L9.046 2H14a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1h-1.85l1.323 3.837a.5.5 0 1 1-.946.326L11.092 11H8.5v3a.5.5 0 0 1-1 0v-3H4.908l-1.435 4.163a.5.5 0 1 1-.946-.326L3.85 11H2a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1h4.954L7.527.337A.5.5 0 0 1 8 0zM2 3v7h12V3H2z"/>
        </svg>
        <h2>Добавьте этап в урок {{ lesson.name }}!</h2>
        <p class="lead">Самое время добавить в ваш урок этапы!</p>
    </div>
    <div class="row center">
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.name, {
                id: 'name',
            }) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.guidance, {
                id: 'guidance',
                'attr': {'class': 'form-control'}
            }) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.exampleImageStage, {
                id: 'exampleImageStage',

            }) }}
        </div>
            <div class="py-2 ">
                <button class="btn btn-lg btn-primary">{{ button_label|default('Сохранить') }}</button>
            </div>
            {{ form_end(form) }}



        <div>
            <a type="button" class="btn btn-sm btn-outline-secondary"
               href="{{ path('lessons_of_course',  {'id': lesson.course.id}) }}">назад</a>
        </div>
    </div>
    <h2 class="fw-light">Этапы урока {{ lesson.name }}</h2>
    <div class="container bg-light">
        <div class="row">
            <div class="col-sm">
                <p>Название</p>
            </div>
            <div class="col-sm">
                <p>Теория</p>
            </div>
            <div class="col-sm">
                <p>Пример</p>
            </div>
            <div class="col-sm">
                <p>Действия</p>
            </div>
        </div>
        <ul class="list-group">
            {% for lesson_stage in lesson.lessonStages %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ loop.index }}
                    <div class="col-sm">
                        {{ lesson_stage.name }}
                    </div>
                    <div class="col-sm">
                        <details>{{ lesson_stage.guidance }}</details>

                    </div>
                    <div class="col-sm">
                        <img  data-src="{{  asset('uploads/exampleimagestages/') ~ lesson_stage.getExampleImageStage }}" style="display: block; width: 226px;" src="{{ asset('uploads/exampleimagestages/') ~ lesson_stage.getExampleImageStage }}" data-holder-rendered="true">
                    </div>
                    <div class="col">
                        <div class="btn-group">
                            <a type="button" class="btn btn-sm btn-outline-secondary"
                               href="{{ path('lesson_stage_edit', {'id': lesson_stage.id}) }}">Редактировать</a>
                            <a type="button" class="btn btn-sm btn-outline-secondary"
                               href="{{ path('reference_of_stage', {'id': lesson_stage.id}) }}">Добавить эталонные рисунки</a>
                            <span type="button" class="badge badge-pill">{{ include('lesson_stage/_delete_form.html.twig') }}</span>
                        </div>

                    </div>

                </li>

            {% else %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}