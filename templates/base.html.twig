<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <header>
            {% block header %}
                {% if is_granted('IS_AUTHENTICATED_FULLY')%}
                    <button class="green"><a href="{{ path('app_logout') }}">Выйти</a> </button>
                {% else %}
                    <button class="green"><a href="{{ path('app_login') }}">Войти</a> </button>
                    <button class="green"><a href="{{ path('app_register') }}">Регистрация</a> </button>
                {% endif %}
            {% endblock %}
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
